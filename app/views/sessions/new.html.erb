<h1>Sessions#new</h1>
<% if flash[:error].present? %>
  <%= flash[:error] %>
<% end %>
<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, '',  class: 'form-control', placeholder: 'Enter your email'%>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Enter your password' %>
  </div>

  <%= button_tag id: 'login' ,name: 'login', class: 'btn btn-primary' do %>
    Login
  <% end %>
<% end %>
