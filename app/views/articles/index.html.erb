<div class="container">
  <div class="row">
    <h1 class="page-header">Article Index</h1>
  </div>
  <div class="row">
    <%= link_to "New Article", new_article_path, class: 'btn btn-primary' %>
  </div>
  <div class="row">
    <table class="table">
      <thead>
      <tr >
        <th>#</th>
        <th>title</th>
        <th>content</th>
        <th>created at</th>
        <th>updated at</th>
        <th>actions</th>
      </tr>
    </thead>
      <tbody>
        <% @articles.each do |article| %>
        <tr >
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.content %></td>
          <td><%= article.created_at %></td>
          <td><%= article.updated_at %></td>
          <td>
            <%= link_to "Show", article_path(article.id) %> |
            <%= link_to "Edit", edit_article_path(article.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</div>
